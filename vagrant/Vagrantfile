# Настройка Vagrant
Vagrant.configure("2") do |config|

  # Массив с параметрами виртуальных машин
  machines = [
    { name: "grafana", ip: "10.0.0.99" },
    { name: "http", ip: "10.0.0.98" },
    { name: "elk", ip: "10.0.0.97" }
  ]

  # Плейбук для всех машин
  config.vm.provision "ansible" do |ansible|
    ansible.playbook = "../vagrant.yml"
  end

  # Цикл по массиву машин
  machines.each do |machine|
    # Определяем виртуальную машину
    config.vm.define machine[:name] do |node|
      # Используем CentOS 7 в качестве базового образа
      config.vm.provider "virtualbox"
      node.vm.box = "centos/7"
      config.vm.box_url = "CentOS-7-x86_64-Vagrant-2004_01.VirtualBox.box"
      # Имя хоста
      node.vm.hostname = machine[:name]
      # IP-адрес
      node.vm.network "public_network", bridge: "eno1", ip: machine[:ip], dev: "eno1"
    end
  end
end



# https://cloud.centos.org/centos/7/vagrant/x86_64/images/CentOS-7-x86_64-Vagrant-2004_01.VirtualBox.box