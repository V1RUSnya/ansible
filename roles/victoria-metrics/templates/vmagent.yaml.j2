global:
  scrape_interval: 10s

scrape_configs:
  - job_name: 'node_stats'
    scrape_interval: 10s
    metrics_path: '/metrics'
    static_configs:
      - targets: ['localhost:9100']
    relabel_configs:
      - source_labels: ['__address__']
        regex: 'localhost:9100'
        replacement: 'node_stats'
        target_label: 'instance'